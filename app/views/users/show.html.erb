<% provide(:title, @user.name) %> 

<div class="row">
	<aside class="span4">
		<%= render 'shared/user_info' %>
	</aside>
	<div class="span8">
	 <% if @user.microposts.any? %>

	 	<h3>Microposts (<%= @user.microposts.count %>)</h3>
	 	<ol class="microposts">
	 		<%= render @microposts %>
	 	</ol>
		<%= will_paginate @microposts %>
		<% else %>
		<p id="no-posts" class="well">Sorry, there are no posts at the moment</p>
	 <% end %>
	</div>
</div>


